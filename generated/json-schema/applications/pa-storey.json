{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "pa-storey.json",
  "title": "Additional storeys",
  "description": "Enlargement of a dwellinghouse by construction of additional storeys",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "desc-work-impacts-risks": {
      "$ref": "#/definitions/desc-work-impacts-risks"
    },
    "eligibility-current-building": {
      "$ref": "#/definitions/eligibility-current-building"
    },
    "eligibility-proposal": {
      "$ref": "#/definitions/eligibility-proposal"
    },
    "eligibility-related-works": {
      "$ref": "#/definitions/eligibility-related-works"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "desc-work-impacts-risks",
    "eligibility-current-building",
    "eligibility-proposal",
    "eligibility-related-works",
    "site-details"
  ],
  "definitions": {
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "eligibility-related-works": {
      "type": "object",
      "properties": {
        "external-support-required": {
          "type": "boolean"
        }
      },
      "required": [
        "external-support-required"
      ]
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "desc-work-impacts-risks": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "dwellinghouse-height": {
          "type": "number"
        },
        "proposed-height": {
          "type": "number"
        },
        "impact-on-amenity": {
          "type": "string"
        },
        "air-traffic-defence-impacts": {
          "type": "string"
        },
        "protected-view-impact": {
          "type": "string"
        }
      },
      "required": [
        "description",
        "dwellinghouse-height",
        "proposed-height",
        "impact-on-amenity",
        "air-traffic-defence-impacts",
        "protected-view-impact"
      ]
    },
    "eligibility-proposal": {
      "type": "object",
      "properties": {
        "principal-part-only": {
          "type": "boolean"
        },
        "ceiling-height-exceeds-3m": {
          "type": "boolean"
        },
        "existing-ceiling-height-exceeds-3m": {
          "type": "boolean"
        },
        "building-height-exceeds-18m": {
          "type": "boolean"
        },
        "roof-height-exceeds-3-5m": {
          "type": "boolean"
        },
        "roof-height-exceeds-7m": {
          "type": "boolean"
        },
        "is-dwelling-detached": {
          "type": "boolean"
        },
        "extension-on-attached-dwelling": {
          "type": "boolean"
        },
        "extension-below-terrace-roof": {
          "type": "boolean"
        },
        "roof-pitch-matching": {
          "type": "boolean"
        },
        "window-on-side-elevation": {
          "type": "boolean"
        },
        "materials-similar-exterior": {
          "type": "boolean"
        },
        "dwellinghouse-use": {
          "type": "boolean"
        }
      },
      "required": [
        "principal-part-only",
        "ceiling-height-exceeds-3m",
        "existing-ceiling-height-exceeds-3m",
        "building-height-exceeds-18m",
        "roof-height-exceeds-3-5m",
        "roof-height-exceeds-7m",
        "is-dwelling-detached",
        "roof-pitch-matching",
        "window-on-side-elevation",
        "materials-similar-exterior",
        "dwellinghouse-use"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "is-dwelling-detached": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "extension-on-attached-dwelling"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-dwelling-detached": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "extension-below-terrace-roof"
            ]
          }
        }
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "eligibility-current-building": {
      "type": "object",
      "properties": {
        "was-constructed-btw-1948-2018": {
          "type": "boolean"
        },
        "has-additional-storeys": {
          "type": "boolean"
        },
        "was-use-granted-by-pdr": {
          "type": "boolean"
        },
        "is-site-in-restricted-area": {
          "type": "boolean"
        }
      },
      "required": [
        "was-constructed-btw-1948-2018",
        "has-additional-storeys",
        "was-use-granted-by-pdr",
        "is-site-in-restricted-area"
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    }
  }
}