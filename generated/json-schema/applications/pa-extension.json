{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "pa-extension.json",
  "title": "Larger Home Extension",
  "description": "Planning application for extension",
  "type": "object",
  "properties": {
    "adj-premises": {
      "$ref": "#/definitions/adj-premises"
    },
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "desc-proposed-works": {
      "$ref": "#/definitions/desc-proposed-works"
    },
    "eligibility-extension": {
      "$ref": "#/definitions/eligibility-extension"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    }
  },
  "required": [
    "adj-premises",
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "desc-proposed-works",
    "eligibility-extension",
    "site-details"
  ],
  "definitions": {
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "address": {
      "type": "object",
      "properties": {
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "uprn": {
          "type": "string"
        }
      },
      "required": [
        "address-text"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "desc-proposed-works": {
      "type": "object",
      "properties": {
        "proposed-works-details": {
          "type": "string"
        },
        "extension-depth": {
          "type": "number"
        },
        "max-extension-height": {
          "type": "number"
        },
        "eaves-height": {
          "type": "number"
        }
      },
      "required": [
        "proposed-works-details",
        "extension-depth",
        "max-extension-height",
        "eaves-height"
      ]
    },
    "eligibility-extension": {
      "type": "object",
      "properties": {
        "is-single-storey-extension": {
          "type": "boolean"
        },
        "is-extension-height-over-4m": {
          "type": "boolean"
        },
        "is-dwelling-detached": {
          "type": "boolean"
        },
        "is-extension-beyond-rear-wall": {
          "type": "boolean"
        },
        "extension-length": {
          "type": "number"
        },
        "is-within-site-constraints": {
          "type": "boolean"
        },
        "site-constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "world-heritage-site",
              "national-park",
              "area-outstanding-natural-beauty",
              "site-special-scientific-interest",
              "national-nature-reserve",
              "conservation-area",
              "special-area-conservation",
              "special-protection-area",
              "green-belt",
              "secretary-specified-area",
              "the-broads"
            ]
          },
          "minItems": 1
        }
      },
      "required": [
        "is-single-storey-extension",
        "is-extension-height-over-4m",
        "is-dwelling-detached",
        "is-extension-beyond-rear-wall",
        "extension-length",
        "is-within-site-constraints"
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "adj-premises": {
      "type": "object",
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/address"
          },
          "minItems": 1
        }
      },
      "required": [
        "addresses"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    }
  }
}