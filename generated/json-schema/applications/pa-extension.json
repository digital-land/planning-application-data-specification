{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "pa-extension.json",
  "title": "Larger Home Extension",
  "description": "Planning application for extension",
  "type": "object",
  "properties": {
    "adj-premises": {
      "$ref": "#/definitions/adj-premises"
    },
    "desc-proposed-works": {
      "$ref": "#/definitions/desc-proposed-works"
    },
    "eligibility-extension": {
      "$ref": "#/definitions/eligibility-extension"
    }
  },
  "required": [],
  "definitions": {
    "address": {
      "type": "object",
      "properties": {
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "uprn": {
          "type": "string"
        }
      },
      "required": [
        "address-text"
      ]
    },
    "desc-proposed-works": {
      "type": "object",
      "properties": {
        "proposed-works-details": {
          "type": "string"
        },
        "extension-depth": {
          "type": "number"
        },
        "max-extension-height": {
          "type": "number"
        },
        "eaves-height": {
          "type": "number"
        }
      },
      "required": [
        "proposed-works-details",
        "extension-depth",
        "max-extension-height",
        "eaves-height"
      ]
    },
    "adj-premises": {
      "type": "object",
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/address"
          },
          "minItems": 1
        }
      },
      "required": [
        "addresses"
      ]
    },
    "eligibility-extension": {
      "type": "object",
      "properties": {
        "is-single-storey-extension": {
          "type": "boolean"
        },
        "is-extension-height-over-4m": {
          "type": "boolean"
        },
        "is-dwelling-detached": {
          "type": "boolean"
        },
        "is-extension-beyond-rear-wall": {
          "type": "boolean"
        },
        "extension-length": {
          "type": "number"
        },
        "is-within-site-constraints": {
          "type": "boolean"
        },
        "site-constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "world-heritage-site",
              "national-park",
              "area-outstanding-natural-beauty",
              "site-special-scientific-interest",
              "national-nature-reserve",
              "conservation-area",
              "special-area-conservation",
              "special-protection-area",
              "green-belt",
              "secretary-specified-area",
              "the-broads"
            ]
          },
          "minItems": 1
        }
      },
      "required": [
        "is-single-storey-extension",
        "is-extension-height-over-4m",
        "is-dwelling-detached",
        "is-extension-beyond-rear-wall",
        "extension-length",
        "is-within-site-constraints"
      ]
    }
  }
}