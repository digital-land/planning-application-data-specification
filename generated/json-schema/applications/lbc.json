{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "lbc.json",
  "title": "Listed building consent",
  "description": "An application for works for the demolition of a listed building or for its alteration or extension in any manner which would affect its character as a building of special architectural or historic interest",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "community-consultation": {
      "$ref": "#/definitions/community-consultation"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "demolition": {
      "$ref": "#/definitions/demolition"
    },
    "immunity-from-listing": {
      "$ref": "#/definitions/immunity-from-listing"
    },
    "lb-alter": {
      "$ref": "#/definitions/lb-alter"
    },
    "lb-grade": {
      "$ref": "#/definitions/lb-grade"
    },
    "materials": {
      "$ref": "#/definitions/materials"
    },
    "ownership-certs": {
      "$ref": "#/definitions/ownership-certs"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "proposal-details": {
      "$ref": "#/definitions/proposal-details"
    },
    "related-applications": {
      "$ref": "#/definitions/related-applications"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    },
    "application": {
      "$ref": "#/definitions/application"
    }
  },
  "required": [
    "application"
  ],
  "definitions": {
    "building-element": {
      "type": "object",
      "properties": {
        "building-element-type": {
          "type": "string",
          "enum": [
            "walls",
            "roof",
            "windows",
            "doors",
            "boundary-treatments",
            "vehicle-access-hard-standings",
            "lighting",
            "external-walls",
            "roof-covering",
            "chimney",
            "external-doors",
            "ceilings",
            "internal-walls",
            "floors",
            "internal-doors",
            "rainwater-goods",
            "other"
          ]
        },
        "existing-materials": {
          "type": "string"
        },
        "proposed-materials": {
          "type": "string"
        },
        "materials-not-applicable": {
          "type": "boolean"
        },
        "materials-not-known": {
          "type": "boolean"
        }
      },
      "required": [
        "building-element-type"
      ]
    },
    "supporting-document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "reference",
        "name"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "newspaper-notice": {
      "type": "object",
      "properties": {
        "newspaper-name": {
          "type": "string"
        },
        "publication-date": {
          "type": "string"
        }
      },
      "required": [
        "newspaper-name",
        "publication-date"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "notified-person": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "notice-date": {
          "type": "string"
        }
      },
      "required": []
    },
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "related-application-details": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "decision-date": {
          "type": "string"
        }
      },
      "required": [
        "reference",
        "description"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "demolition": {
      "type": "object",
      "properties": {
        "is-proposing-demolition": {
          "type": "boolean"
        },
        "is-total-demolition": {
          "type": "boolean"
        },
        "is-demolishing-building-in-curtilage": {
          "type": "boolean"
        },
        "is-partial-demolition": {
          "type": "boolean"
        },
        "listed-building-volume": {
          "type": "number"
        },
        "demolition-volume": {
          "type": "number"
        },
        "part-built-date": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "is-proposing-demolition",
        "description",
        "reason"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "is-proposing-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "is-total-demolition"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-proposing-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "is-demolishing-building-in-curtilage"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-proposing-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "is-partial-demolition"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-partial-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "listed-building-volume"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-partial-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "demolition-volume"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-partial-demolition": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "part-built-date"
            ]
          }
        }
      ]
    },
    "lb-grade": {
      "type": "object",
      "properties": {
        "listed-building-grade": {
          "type": "string",
          "enum": []
        },
        "listed-building": {
          "type": "string"
        },
        "provided-by": {
          "type": "string",
          "enum": [
            "applicant",
            "system"
          ]
        }
      },
      "required": [
        "listed-building-grade"
      ]
    },
    "lb-alter": {
      "type": "object",
      "properties": {
        "proposal-alter-lb": {
          "type": "boolean"
        },
        "proposal-alter-lb-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "interior",
              "exterior",
              "fixed",
              "stripping"
            ]
          },
          "minItems": 1
        },
        "document-reference": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-document"
          },
          "minItems": 1
        }
      },
      "required": [
        "proposal-alter-lb"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "proposal-alter-lb": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-alter-lb-types"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-alter-lb": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "document-reference"
            ]
          }
        }
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "community-consultation": {
      "type": "object",
      "properties": {
        "have-consulted": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "have-consulted"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "have-consulted": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "description"
            ]
          }
        }
      ]
    },
    "site-visit": {
      "type": "object",
      "properties": {
        "can-be-seen-from": {
          "type": "boolean"
        },
        "contact-type": {
          "type": "string",
          "enum": [
            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "contact-type": {
                "const": "other"
              }
            }
          },
          "then": {
            "required": [
              "other-contact"
            ]
          }
        }
      ]
    },
    "immunity-from-listing": {
      "type": "object",
      "properties": {
        "cert-of-immunity-sought": {
          "type": "string",
          "enum": [
            "yes",
            "no",
            "unknown"
          ]
        },
        "application-result": {
          "type": "string"
        }
      },
      "required": [
        "cert-of-immunity-sought"
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "ownership-certs": {
      "type": "object",
      "properties": {
        "sole-owner": {
          "type": "boolean"
        },
        "lbc-owners": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/notified-person"
          },
          "minItems": 1
        },
        "steps-taken": {
          "type": "string"
        },
        "newspaper-notices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/newspaper-notice"
          },
          "minItems": 1
        },
        "ownership-cert-option": {
          "type": "string",
          "enum": [
            "certificate-a",
            "certificate-b",
            "certificate-c",
            "certificate-d"
          ]
        },
        "applicant-signature": {
          "type": "string"
        },
        "agent-signature": {
          "type": "string"
        },
        "signature-date": {
          "type": "string"
        }
      },
      "required": [
        "sole-owner"
      ]
    },
    "proposal-details": {
      "type": "object",
      "properties": {
        "proposal-description": {
          "type": "string"
        },
        "proposal-started": {
          "type": "boolean"
        },
        "proposal-started-date": {
          "type": "string"
        },
        "proposal-completed": {
          "type": "boolean"
        },
        "proposal-completed-date": {
          "type": "string"
        }
      },
      "required": [
        "proposal-description",
        "proposal-started",
        "proposal-completed"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "proposal-started": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-started-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-completed": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-completed-date"
            ]
          }
        }
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {
        "conflict-to-declare": {
          "type": "boolean"
        },
        "conflict-person-name": {
          "type": "string"
        },
        "conflict-details": {
          "type": "string"
        }
      },
      "required": [
        "conflict-to-declare"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-person-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-details"
            ]
          }
        }
      ]
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    },
    "materials": {
      "type": "object",
      "properties": {
        "building-elements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/building-element"
          },
          "minItems": 1
        },
        "additional-material-information": {
          "type": "string"
        },
        "supporting-documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-document"
          },
          "minItems": 1
        }
      },
      "required": [
        "building-elements",
        "additional-material-information"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "additional-material-information": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "supporting-documents"
            ]
          }
        }
      ]
    },
    "related-applications": {
      "type": "object",
      "properties": {
        "has-related-applications": {
          "type": "boolean"
        },
        "related-applications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/related-application-details"
          },
          "minItems": 1
        }
      },
      "required": [
        "has-related-applications"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "has-related-applications": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "related-applications"
            ]
          }
        }
      ]
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "application": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "application-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "hh",
              "full",
              "outline",
              "reserved-matters",
              "demolition-con-area",
              "lbc",
              "advertising",
              "ldc",
              "prior-approval",
              "s73",
              "approval-condition",
              "consent-under-tpo",
              "non-material-amendment",
              "pip",
              "extraction-oil-gas",
              "hedgerow-removal",
              "notice-trees-in-con-area",
              "waste-dev",
              "land-drainage-consent",
              "footpath-diversion",
              "cert-alt-appropriate-dev",
              "overhead-lines",
              "nsips",
              "mod-construction-hours",
              "extend-duration-permission",
              "mineral-extraction",
              "mod-discharge-s106",
              "twao",
              "change-of-use",
              "reg-3",
              "reg-4",
              "mineral-app",
              "technical-details-consent",
              "romp",
              "haz-substance-consent",
              "psi-app"
            ]
          },
          "minItems": 1
        },
        "application-sub-type": {
          "type": "string",
          "enum": [
            "ldc-existing-use",
            "ldc-prospective-use",
            "ldc-proposed-work-lb",
            "outline-some",
            "outline-all",
            "pa-extension",
            "pa-storey"
          ]
        },
        "planning-authority": {
          "type": "string"
        },
        "submission-date": {
          "type": "string"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        },
        "fee": {
          "$ref": "#/definitions/fee"
        }
      },
      "required": [
        "reference",
        "application-types",
        "planning-authority",
        "submission-date",
        "modules",
        "documents"
      ]
    },
    "fee": {
