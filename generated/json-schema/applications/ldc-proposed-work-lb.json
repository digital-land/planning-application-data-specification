{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "ldc-proposed-work-lb.json",
  "title": "LDC Proposed Work to a Listed Building",
  "description": "Proposed work to a listed building",
  "type": "object",
  "properties": {
    "desc-proposed-works": {
      "$ref": "#/definitions/desc-proposed-works"
    },
    "grounds-for-application": {
      "$ref": "#/definitions/grounds-for-application"
    },
    "lb-grade": {
      "$ref": "#/definitions/lb-grade"
    }
  },
  "required": [],
  "definitions": {
    "document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "document-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "acoustic-report",
              "affordable-housing-statement",
              "air-quality-assessment",
              "arboriculturist-report",
              "archaeological-assessment",
              "biodiversity-survey-report",
              "cil-form",
              "condition-of-trees",
              "completed-app-form",
              "daylight-sunlight-assessment",
              "design-and-access-statement",
              "elevation-existing",
              "elevation-proposed",
              "energy-statement",
              "eia",
              "environmental-statement",
              "flood-risk-assessment",
              "floor-plan-existing",
              "floor-plan-proposed",
              "heritage-impact-assessment",
              "heritage-statement",
              "hydrocarbon-licence",
              "land-contamination-assessment",
              "landscaping-plan",
              "lighting-assessment",
              "location-plan",
              "noise-and-traffic-assessment",
              "noise-assessment",
              "photos",
              "planning-statement",
              "roof-plan-existing",
              "roof-plan-proposed",
              "schedule-of-works",
              "section-existing",
              "section-proposed",
              "site-plan",
              "site-restoration",
              "sketch-plan",
              "sci",
              "structural-damage",
              "subsidence-report",
              "sustainable-drainage-strategy",
              "transport-assessment",
              "travel-plan",
              "ecology-assessment",
              "fire-statement",
              "habitat-baseline",
              "proposed-habitat-plan",
              "sustainability-statement",
              "bng-metric"
            ]
          },
          "minItems": 1
        },
        "file": {
          "$ref": "#/definitions/file"
        }
      },
      "required": [
        "reference",
        "name",
        "document-types",
        "file"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "base64-content": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "mime-type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "file-size": {
          "type": "number"
        }
      },
      "required": [
        "filename"
      ]
    },
    "desc-proposed-works": {
      "type": "object",
      "properties": {
        "proposed-works-details": {
          "type": "string"
        },
        "extension-depth": {
          "type": "number"
        },
        "max-extension-height": {
          "type": "number"
        },
        "eaves-height": {
          "type": "number"
        }
      },
      "required": [
        "proposed-works-details",
        "extension-depth",
        "max-extension-height",
        "eaves-height"
      ]
    },
    "grounds-for-application": {
      "type": "object",
      "properties": {
        "grounds-for-application": {
          "type": "string"
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        }
      },
      "required": [
        "grounds-for-application",
        "documents"
      ]
    },
    "lb-grade": {
      "type": "object",
      "properties": {
        "listed-building-grade": {
          "type": "string",
          "enum": []
        },
        "listed-building": {
          "type": "string"
        },
        "provided-by": {
          "type": "string",
          "enum": [
            "applicant",
            "system"
          ]
        }
      },
      "required": [
        "listed-building-grade"
      ]
    }
  }
}