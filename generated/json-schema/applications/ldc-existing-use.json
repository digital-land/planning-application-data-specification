{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "ldc-existing-use.json",
  "title": "LDC Existing Use",
  "description": "Existing use of the site",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "desc-existing-use": {
      "$ref": "#/definitions/desc-existing-use"
    },
    "grounds-ldc": {
      "$ref": "#/definitions/grounds-ldc"
    },
    "info-support-ldc": {
      "$ref": "#/definitions/info-support-ldc"
    },
    "interest-details": {
      "$ref": "#/definitions/interest-details"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "res-units": {
      "$ref": "#/definitions/res-units"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    },
    "use-works-activity": {
      "$ref": "#/definitions/use-works-activity"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "desc-existing-use",
    "grounds-ldc",
    "info-support-ldc",
    "interest-details",
    "pre-app-advice",
    "res-units",
    "site-details",
    "site-visit",
    "use-works-activity"
  ],
  "definitions": {
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "existing-use-detail": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": [
            "b2",
            "b8",
            "c1",
            "c2",
            "c2a",
            "c3",
            "c4",
            "e-a",
            "e-b",
            "e-c-i",
            "e-c-ii",
            "e-c-iii",
            "e-d",
            "e-e",
            "e-f",
            "e-g-i",
            "e-g-ii",
            "e-g-iii",
            "f1-a",
            "f1-b",
            "f1-c",
            "f1-d",
            "f1-e",
            "f1-f",
            "f1-g",
            "f2-a",
            "f2-b",
            "f2-c",
            "f2-d",
            "sui",
            "other"
          ]
        },
        "use-details": {
          "type": "string"
        },
        "land-part": {
          "type": "string"
        }
      },
      "required": [
        "use",
        "land-part"
      ],
      "if": {
        "allOf": [
          {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          }
        ]
      },
      "then": {
        "required": [
          "use-details"
        ]
      }
    },
    "ldc-owner-details": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "informed-of-application": {
          "type": "boolean"
        }
      },
      "required": [
        "person",
        "informed-of-application"
      ]
    },
    "ldc-interested-person": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "nature-of-interest": {
          "type": "string"
        },
        "informed-of-application": {
          "type": "boolean"
        },
        "reason-not-informed": {
          "type": "string"
        }
      },
      "required": [
        "person",
        "nature-of-interest",
        "informed-of-application"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "supporting-applications": {
      "type": "object",
      "properties": {
        "reference-number": {
          "type": "string"
        },
        "condition-number": {
          "type": "string"
        },
        "decision-date": {
          "type": "string"
        }
      },
      "required": []
    },
    "residential-unit-summary": {
      "type": "object",
      "properties": {
        "tenure-type": {
          "type": "string",
          "enum": [
            "market-housing",
            "social-rented",
            "intermediate-housing",
            "key-worker-housing",
            "affordable-rent",
            "home-ownership",
            "starter-homes",
            "custom-build"
          ]
        },
        "housing-type": {
          "type": "string",
          "enum": [
            "houses",
            "flats-maisonettes",
            "sheltered-housing",
            "bedsit-studio",
            "cluster-flats",
            "other",
            "live-work-units",
            "unknown"
          ]
        },
        "existing-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        },
        "proposed-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        }
      },
      "required": [
        "tenure-type",
        "housing-type"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "unit-quantities": {
      "type": "object",
      "properties": {
        "units-unknown": {
          "type": "boolean"
        },
        "units-per-bedroom-no": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/bedroom-count"
          },
          "minItems": 1
        },
        "total-units": {
          "type": "number"
        }
      },
      "required": [
        "units-unknown"
      ],
      "if": {
        "properties": {
          "units-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "units-per-bedroom-no"
        ]
      }
    },
    "bedroom-count": {
      "type": "object",
      "properties": {
        "no-bedrooms-unknown": {
          "type": "boolean"
        },
        "no-of-bedrooms": {
          "type": "number"
        },
        "units": {
          "type": "number"
        }
      },
      "required": [
        "no-bedrooms-unknown",
        "units"
      ],
      "if": {
        "properties": {
          "no-bedrooms-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "no-of-bedrooms"
        ]
      }
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "info-support-ldc": {
      "type": "object",
      "properties": {
        "existing-use-start-date": {
          "type": "string"
        },
        "has-existing-use-interrupted": {
          "type": "boolean"
        },
        "interruption-details": {
          "type": "string"
        },
        "has-existing-use-changed": {
          "type": "boolean"
        },
        "existing-use-change-details": {
          "type": "string"
        }
      },
      "required": [
        "existing-use-start-date",
        "has-existing-use-interrupted",
        "has-existing-use-changed"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "has-existing-use-interrupted": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "interruption-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "has-existing-use-changed": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "existing-use-change-details"
            ]
          }
        }
      ]
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "interest-details": {
      "type": "object",
      "properties": {
        "applicant-interest": {
          "type": "string",
          "enum": []
        },
        "owner-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-owner-details"
          },
          "minItems": 1
        },
        "interested-persons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-interested-person"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicant-interest"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "applicant-interest": {
                    "const": "lessee"
                  }
                }
              },
              {
                "properties": {
                  "applicant-interest": {
                    "const": "occupier"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "owner-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "applicant-interest": {
                "const": "none"
              }
            }
          },
          "then": {
            "required": [
              "interested-persons"
            ]
          }
        }
      ]
    },
    "site-visit": {
      "type": "object",
      "properties": {
        "can-be-seen-from": {
          "type": "boolean"
        },
        "contact-type": {
          "type": "string",
          "enum": [
            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "if": {
        "properties": {
          "contact-type": {
            "const": "other"
          }
        }
      },
      "then": {
        "required": [
          "other-contact"
        ]
      }
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "desc-existing-use": {
      "type": "object",
      "properties": {
        "existing-use-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/existing-use-detail"
          },
          "minItems": 1
        }
      },
      "required": [
        "existing-use-details"
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "use-works-activity": {
      "type": "object",
      "properties": {
        "ldc-need": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "existing-use",
              "existing-building-work",
              "breach-con-existing-use",
              "breach-con-building-work",
              "breach-con-activity"
            ]
          },
          "minItems": 1
        },
        "use": {
          "type": "string",
          "enum": [
            "b2",
            "b8",
            "c1",
            "c2",
            "c2a",
            "c3",
            "c4",
            "e-a",
            "e-b",
            "e-c-i",
            "e-c-ii",
            "e-c-iii",
            "e-d",
            "e-e",
            "e-f",
            "e-g-i",
            "e-g-ii",
            "e-g-iii",
            "f1-a",
            "f1-b",
            "f1-c",
            "f1-d",
            "f1-e",
            "f1-f",
            "f1-g",
            "f2-a",
            "f2-b",
            "f2-c",
            "f2-d",
            "sui",
            "other"
          ]
        },
        "specified-use": {
          "type": "string"
        }
      },
      "required": [
        "ldc-need"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "ldc-need": {
                    "pattern": "existing-use"
                  }
                }
              },
              {
                "properties": {
                  "ldc-need": {
                    "pattern": "breach-con-existing-use"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "use"
            ]
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "use": {
                    "const": "sui"
                  }
                }
              },
              {
                "properties": {
                  "use": {
                    "const": "other"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        }
      ]
    },
    "grounds-ldc": {
      "type": "object",
      "properties": {
        "grounds-pre-2024": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "use-10y",
              "breach-10y",
              "lawful-change-no-pp",
              "works-complete-4y",
              "dwelling-change-4y",
              "other"
            ]
          },
          "minItems": 1
        },
        "grounds-post-2024": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "use-10y",
              "lawful-change-no-pp",
              "other"
            ]
          },
          "minItems": 1
        },
        "other-details": {
          "type": "string"
        },
        "supporting-applications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-applications"
          },
          "minItems": 1
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "reason"
      ]
    },
    "res-units": {
      "type": "object",
      "properties": {
        "will-residential-units-change": {
          "type": "boolean"
        },
        "residential-unit-summary": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/residential-unit-summary"
          },
          "minItems": 1
        },
        "total-existing-units": {
          "type": "number"
        },
        "total-proposed-units": {
          "type": "number"
        },
        "net-change": {
          "type": "number"
        }
      },
      "required": [
        "will-residential-units-change",
        "total-existing-units",
        "total-proposed-units",
        "net-change"
      ],
      "if": {
        "properties": {
          "will-residential-units-change": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "residential-unit-summary"
        ]
      }
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    }
  }
}