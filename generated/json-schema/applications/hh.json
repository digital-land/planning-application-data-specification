      ]
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
