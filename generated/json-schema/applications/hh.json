  "required": [
    "access-rights-of-way",
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "bng",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "materials",
    "ownership-certs",
    "parking",
    "pre-app-advice",
