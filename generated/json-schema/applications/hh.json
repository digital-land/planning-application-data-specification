          "type": "string",
          "enum": [
            "walls",
            "roof",
            "windows",
            "doors",
            "boundary-treatments",
            "vehicle-access-hard-standings",
            "lighting",
            "external-walls",
            "roof-covering",
            "chimney",
            "external-doors",
            "ceilings",
            "internal-walls",
            "floors",
            "internal-doors",
            "rainwater-goods",
            "other"
