            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "if": {
        "properties": {
          "contact-type": {
            "const": "other"
          }
        }
      },
      "then": {
        "required": [
          "other-contact"
        ]
      }
