        "falling-trees-document": {
          "$ref": "#/definitions/supporting-document"
        },
        "tree-removal": {
          "type": "boolean"
        },
        "tree-removal-plan": {
          "$ref": "#/definitions/supporting-document"
        }
      },
      "required": [
        "has-falling-trees-risk",
        "tree-removal"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "has-falling-trees-risk": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "falling-trees-document"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "tree-removal": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "tree-removal-plan"
            ]
          }
