    "access-rights-of-way": {
      "type": "object",
      "properties": {
        "new-altered-vehicle": {
          "type": "string",
          "enum": [
            "true",
            "false",
            "unknown"
          ]
        },
        "new-altered-pedestrian": {
          "type": "string",
          "enum": [
            "true",
            "false",
            "unknown"
          ]
        },
        "change-right-of-way": {
          "type": "string",
          "enum": [
            "true",
            "false",
            "unknown"
          ]
        },
        "supporting-documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-document"
          },
          "minItems": 1
        }
      },
      "required": [
        "new-altered-vehicle",
        "new-altered-pedestrian",
        "change-right-of-way"
      ],
      "if": {
        "anyOf": [
          {
            "properties": {
              "new-altered-vehicle": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "new-altered-pedestrian": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "change-right-of-way": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "new-right-of-way": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "new-public-road": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "temp-right-of-way": {
                "const": "true"
              }
            }
          },
          {
            "properties": {
              "future-new-right-of-way": {
                "const": "true"
              }
            }
          }
        ]
