          "then": {
            "required": [
              "proposal-started-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-completed": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-completed-date"
            ]
          }
        }
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
