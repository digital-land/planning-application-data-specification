      "allOf": [
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-person-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-details"
            ]
          }
        }
