{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "outline-all.json",
  "title": "Outline Planning Permission with All Matters Reserved",
  "description": "Outline planning permission with all matters reserved",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "bng": {
      "$ref": "#/definitions/bng"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "employment": {
      "$ref": "#/definitions/employment"
    },
    "existing-use": {
      "$ref": "#/definitions/existing-use"
    },
    "flood-risk-assessment": {
      "$ref": "#/definitions/flood-risk-assessment"
    },
    "hrs-operation": {
      "$ref": "#/definitions/hrs-operation"
    },
    "non-res-floorspace": {
      "$ref": "#/definitions/non-res-floorspace"
    },
    "ownership-certs": {
      "$ref": "#/definitions/ownership-certs"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "processes-machinery-waste": {
      "$ref": "#/definitions/processes-machinery-waste"
    },
    "proposal-details": {
      "$ref": "#/definitions/proposal-details"
    },
    "res-units": {
      "$ref": "#/definitions/res-units"
    },
    "site-area": {
      "$ref": "#/definitions/site-area"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "bng",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "employment",
    "existing-use",
    "flood-risk-assessment",
    "hrs-operation",
    "non-res-floorspace",
    "ownership-certs",
    "pre-app-advice",
    "processes-machinery-waste",
    "proposal-details",
    "res-units",
    "site-area",
    "site-details",
    "site-visit"
  ],
  "definitions": {
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "existing-use-detail": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": [
            "b2",
            "b8",
            "c1",
            "c2",
            "c2a",
            "c3",
            "c4",
            "e-a",
            "e-b",
            "e-c-i",
            "e-c-ii",
            "e-c-iii",
            "e-d",
            "e-e",
            "e-f",
            "e-g-i",
            "e-g-ii",
            "e-g-iii",
            "f1-a",
            "f1-b",
            "f1-c",
            "f1-d",
            "f1-e",
            "f1-f",
            "f1-g",
            "f2-a",
            "f2-b",
            "f2-c",
            "f2-d",
            "sui",
            "other"
          ]
        },
        "use-details": {
          "type": "string"
        },
        "land-part": {
          "type": "string"
        }
      },
      "required": [
        "use",
        "land-part"
      ],
      "if": {
        "allOf": [
          {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          }
        ]
      },
      "then": {
        "required": [
          "use-details"
        ]
      }
    },
    "waste-streams": {
      "type": "object",
      "properties": {
        "municipal": {
          "type": "number"
        },
        "construction-demolition": {
          "type": "number"
        },
        "commercial-industrial": {
          "type": "number"
        },
        "hazardous": {
          "type": "number"
        }
      },
      "required": []
    },
    "waste-management": {
      "type": "object",
      "properties": {
        "waste-management-facility-type": {
          "type": "string",
          "enum": [
            "inert-landfill",
            "non-hazardous-landfill",
            "hazardous-landfill",
            "energy-waste-incineration",
            "other-incineration",
            "landfill-gas-plant",
            "pyrolysis-gasification",
            "metal-recycling",
            "transfer-stations",
            "mrf",
            "household-amenity-site",
            "open-windrow-composting",
            "in-vessel-composting",
            "anaerobic-digestion",
            "mbt",
            "sewage-treatment",
            "other-treatment",
            "construction-recycling",
            "waste-storage",
            "other-waste-management",
            "other-developments"
          ]
        },
        "not-applicable": {
          "type": "boolean"
        },
        "total-capacity": {
          "type": "number"
        },
        "annual-throughput": {
          "type": "number"
        }
      },
      "required": [
        "waste-management-facility-type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "total-capacity"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "annual-throughput"
            ]
          }
        }
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "residential-unit-summary": {
      "type": "object",
      "properties": {
        "tenure-type": {
          "type": "string",
          "enum": [
            "market-housing",
            "social-rented",
            "intermediate-housing",
            "key-worker-housing",
            "affordable-rent",
            "home-ownership",
            "starter-homes",
            "custom-build"
          ]
        },
        "housing-type": {
          "type": "string",
          "enum": [
            "houses",
            "flats-maisonettes",
            "sheltered-housing",
            "bedsit-studio",
            "cluster-flats",
            "other",
            "live-work-units",
            "unknown"
          ]
        },
        "existing-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        },
        "proposed-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        }
      },
      "required": [
        "tenure-type",
        "housing-type"
      ]
    },
    "employees": {
      "type": "object",
      "properties": {
        "full-time": {
          "type": "number"
        },
        "part-time": {
          "type": "number"
        },
        "total-fte": {
          "type": "number"
        }
      },
      "required": [
        "full-time",
        "part-time",
        "total-fte"
      ]
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "unit-quantities": {
      "type": "object",
      "properties": {
        "units-unknown": {
          "type": "boolean"
        },
        "units-per-bedroom-no": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/bedroom-count"
          },
          "minItems": 1
        },
        "total-units": {
          "type": "number"
        }
      },
      "required": [
        "units-unknown"
      ],
      "if": {
        "properties": {
          "units-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "units-per-bedroom-no"
        ]
      }
    },
    "bedroom-count": {
      "type": "object",
      "properties": {
        "no-bedrooms-unknown": {
          "type": "boolean"
        },
        "no-of-bedrooms": {
          "type": "number"
        },
        "units": {
          "type": "number"
        }
      },
      "required": [
        "no-bedrooms-unknown",
        "units"
      ],
      "if": {
        "properties": {
          "no-bedrooms-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "no-of-bedrooms"
        ]
      }
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "ownership-certs": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "bng": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "flood-risk-assessment": {
      "type": "object",
      "properties": {
        "flood-risk-area": {
          "type": "boolean"
        },
        "data-provided-by": {
          "type": "string",
          "enum": [
            "applicant",
            "system"
          ]
        },
        "flood-risk-assessment": {
          "type": "string"
        },
        "within-20m-watercourse": {
          "type": "boolean"
        },
        "increases-flood-risk": {
          "type": "boolean"
        },
        "surface-water-disposal": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "sustainable-drainage",
              "soakaway",
              "main-sewer",
              "existing-watercourse",
              "pond-lake"
            ]
          },
          "minItems": 1
        }
      },
      "required": [
        "flood-risk-area",
        "within-20m-watercourse",
        "increases-flood-risk",
        "surface-water-disposal"
      ],
      "if": {
        "properties": {
          "flood-risk-area": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "flood-risk-assessment"
        ]
      }
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "site-visit": {
      "type": "object",
      "properties": {
        "can-be-seen-from": {
          "type": "boolean"
        },
        "contact-type": {
          "type": "string",
          "enum": [
            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "if": {
        "properties": {
          "contact-type": {
            "const": "other"
          }
        }
      },
      "then": {
        "required": [
          "other-contact"
        ]
      }
    },
    "non-res-floorspace": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "processes-machinery-waste": {
      "type": "object",
      "properties": {
        "site-activity-details": {
          "type": "string"
        },
        "proposal-waste-management": {
          "type": "boolean"
        },
        "waste-management": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/waste-management"
          },
          "minItems": 1
        },
        "waste-streams": {
          "$ref": "#/definitions/waste-streams"
        }
      },
      "required": [
        "site-activity-details",
        "proposal-waste-management"
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "existing-use": {
      "type": "object",
      "properties": {
        "existing-use-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/existing-use-detail"
          },
          "minItems": 1
        },
        "site-vacant": {
          "type": "boolean"
        },
        "last-use-details": {
          "type": "string"
        },
        "last-use-end-date": {
          "type": "string"
        },
        "is-contaminated-land": {
          "type": "boolean"
        },
        "is-suspected-contaminated-land": {
          "type": "boolean"
        },
        "proposed-use-contamination-risk": {
          "type": "boolean"
        },
        "contamination-assessment": {
          "type": "string"
        }
      },
      "required": [
        "existing-use-details",
        "site-vacant",
        "is-contaminated-land",
        "is-suspected-contaminated-land",
        "proposed-use-contamination-risk"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "site-vacant": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "last-use-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "site-vacant": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "last-use-end-date"
            ]
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "is-contaminated-land": {
                    "const": true
                  }
                }
              },
              {
                "properties": {
                  "is-suspected-contaminated-land": {
                    "const": true
                  }
                }
              },
              {
                "properties": {
                  "proposed-use-contamination-risk": {
                    "const": true
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "contamination-assessment"
            ]
          }
        }
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "site-area": {
      "type": "object",
      "properties": {
        "site-area-in-hectares": {
          "type": "number"
        },
        "site-area-provided-by": {
          "type": "string",
          "enum": [
            "applicant",
            "system"
          ]
        }
      },
      "required": [
        "site-area-in-hectares"
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "hrs-operation": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "employment": {
      "type": "object",
      "properties": {
        "existing-employees": {
          "$ref": "#/definitions/employees"
        },
        "proposed-employees": {
          "$ref": "#/definitions/employees"
        },
        "employment-impact": {
          "type": "string"
        }
      },
      "required": [
        "existing-employees",
        "proposed-employees"
      ]
    },
    "res-units": {
      "type": "object",
      "properties": {
        "will-residential-units-change": {
          "type": "boolean"
        },
        "residential-unit-summary": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/residential-unit-summary"
          },
          "minItems": 1
        },
        "total-existing-units": {
          "type": "number"
        },
        "total-proposed-units": {
          "type": "number"
        },
        "net-change": {
          "type": "number"
        }
      },
      "required": [
        "will-residential-units-change",
        "total-existing-units",
        "total-proposed-units",
        "net-change"
      ],
      "if": {
        "properties": {
          "will-residential-units-change": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "residential-unit-summary"
        ]
      }
    },
    "proposal-details": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    }
  }
}