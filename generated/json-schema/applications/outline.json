{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "outline.json",
  "title": "Outline planning",
  "description": "Applications that are used to understand whether the basic nature of a development is viable",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "bng": {
      "$ref": "#/definitions/bng"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "employment": {
      "$ref": "#/definitions/employment"
    },
    "existing-use": {
      "$ref": "#/definitions/existing-use"
    },
    "flood-risk-assessment": {
      "$ref": "#/definitions/flood-risk-assessment"
    },
    "hrs-operation": {
      "$ref": "#/definitions/hrs-operation"
    },
    "non-res-floorspace": {
      "$ref": "#/definitions/non-res-floorspace"
    },
    "ownership-certs": {
      "$ref": "#/definitions/ownership-certs"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "processes-machinery-waste": {
      "$ref": "#/definitions/processes-machinery-waste"
    },
    "proposal-details": {
      "$ref": "#/definitions/proposal-details"
    },
    "res-units": {
      "$ref": "#/definitions/res-units"
    },
    "site-area": {
      "$ref": "#/definitions/site-area"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    },
    "application": {
      "$ref": "#/definitions/application"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "bng",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "employment",
    "existing-use",
    "flood-risk-assessment",
    "hrs-operation",
    "non-res-floorspace",
    "ownership-certs",
    "pre-app-advice",
    "processes-machinery-waste",
    "proposal-details",
    "res-units",
    "site-area",
    "site-details",
    "site-visit",
    "application"
  ],
  "definitions": {
    "notified-person": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "notice-date": {
          "type": "string"
        }
      },
      "required": []
    },
    "waste-management": {
      "type": "object",
      "properties": {
        "waste-management-facility-type": {
          "type": "string",
          "enum": [
            "inert-landfill",
            "non-hazardous-landfill",
            "hazardous-landfill",
            "energy-waste-incineration",
            "other-incineration",
            "landfill-gas-plant",
            "pyrolysis-gasification",
            "metal-recycling",
            "transfer-stations",
            "mrf",
            "household-amenity-site",
            "open-windrow-composting",
            "in-vessel-composting",
            "anaerobic-digestion",
            "mbt",
            "sewage-treatment",
            "other-treatment",
            "construction-recycling",
            "waste-storage",
            "other-waste-management",
            "other-developments"
          ]
        },
        "not-applicable": {
          "type": "boolean"
        },
        "total-capacity": {
          "type": "number"
        },
        "annual-throughput": {
          "type": "number"
        }
      },
      "required": [
        "waste-management-facility-type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "total-capacity"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "annual-throughput"
            ]
          }
        }
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "bng-exemption-reason": {
      "type": "object",
      "properties": {
        "exemption-type": {
          "type": "string",
          "enum": [
            "pre-commencement",
            "small-sites",
            "de-minimis",
            "self-build",
            "gain-site",
            "retrospective",
            "hs2"
          ]
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "exemption-type",
        "reason"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "existing-use-detail": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": []
        },
        "use-details": {
          "type": "string"
        },
        "land-part": {
          "type": "string"
        }
      },
      "required": [
        "use",
        "land-part"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          "then": {
            "required": [
              "use-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          },
          "then": {
            "required": [
              "use-details"
            ]
          }
        }
      ]
    },
    "floorspace-details-outline": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": []
        },
        "specified-use": {
          "type": "string"
        },
        "not-applicable": {
          "type": "boolean"
        },
        "existing-gross-floorspace": {
          "type": "number"
        },
        "is-floorspace-lost-known": {
          "type": "boolean"
        },
        "floorspace-lost": {
          "type": "number"
        },
        "is-total-gross-proposed-known": {
          "type": "boolean"
        },
        "total-gross-proposed": {
          "type": "number"
        },
        "net-additional-floorspace": {
          "type": "number"
        }
      },
      "required": [
        "use",
        "existing-gross-floorspace",
        "net-additional-floorspace"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "use": {
                    "const": null
                  }
                }
              },
              {
                "properties": {
                  "use": {
                    "const": null
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "floorspace-lost"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-floorspace-lost-known": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "floorspace-lost"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "total-gross-proposed"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-total-gross-proposed-known": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "total-gross-proposed"
            ]
          }
        }
      ]
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "newspaper-notice": {
      "type": "object",
      "properties": {
        "newspaper-name": {
          "type": "string"
        },
        "publication-date": {
          "type": "string"
        }
      },
      "required": [
        "newspaper-name",
        "publication-date"
      ]
    },
    "room-details-outline": {
      "type": "object",
      "properties": {
        "use-class": {
          "type": "string",
          "enum": []
        },
        "not-applicable": {
          "type": "boolean"
        },
        "is-existing-rooms-lost-known": {
          "type": "boolean"
        },
        "existing-rooms-lost": {
          "type": "number"
        },
        "is-total-rooms-proposed-known": {
          "type": "boolean"
        },
        "total-rooms-proposed": {
          "type": "number"
        },
        "net-additional-rooms": {
          "type": "number"
        }
      },
      "required": [
        "use-class",
        "net-additional-rooms"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "existing-rooms-lost"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-existing-rooms-lost-known": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "existing-rooms-lost"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "not-applicable": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "total-rooms-proposed"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "is-total-rooms-proposed-known": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "total-rooms-proposed"
            ]
          }
        }
      ]
    },
    "employees": {
      "type": "object",
      "properties": {
        "full-time": {
          "type": "number"
        },
        "part-time": {
          "type": "number"
        },
        "total-fte": {
          "type": "number"
        }
      },
      "required": [
        "full-time",
        "part-time",
        "total-fte"
      ]
    },
    "residential-unit-summary": {
      "type": "object",
      "properties": {
        "tenure-type": {
          "type": "string",
          "enum": [
            "market-housing",
            "social-rented",
            "intermediate-housing",
            "key-worker-housing",
            "affordable-rent",
            "home-ownership",
            "starter-homes",
            "custom-build"
          ]
        },
        "housing-type": {
          "type": "string",
          "enum": [
            "houses",
            "flats-maisonettes",
            "sheltered-housing",
            "bedsit-studio",
            "cluster-flats",
            "other",
            "live-work-units",
            "unknown"
          ]
        },
        "existing-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        },
        "proposed-unit-breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/unit-quantities"
          },
          "minItems": 1
        }
      },
      "required": [
        "tenure-type",
        "housing-type"
      ]
    },
    "hours-of-operation": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": []
        },
        "use-other": {
          "type": "string"
        },
        "operational-times": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/operational-times"
          },
          "minItems": 1
        },
        "hours-not-known": {
          "type": "boolean"
        }
      },
      "required": [
        "use"
      ],
      "if": {
        "properties": {
          "hours-not-known": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "operational-times"
        ]
      }
    },
    "operational-times": {
      "type": "object",
      "properties": {
        "day-type": {
          "type": "string",
          "enum": [
            "monday-friday",
            "saturday",
            "sunday",
            "bank-holiday"
          ]
        },
        "closed": {
          "type": "boolean"
        },
        "time-ranges": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/time-range"
          },
          "minItems": 1
        }
      },
      "required": [
        "day-type"
      ],
      "if": {
        "properties": {
          "closed": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "time-ranges"
        ]
      }
    },
    "unit-quantities": {
      "type": "object",
      "properties": {
        "units-unknown": {
          "type": "boolean"
        },
        "units-per-bedroom-no": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/bedroom-count"
          },
          "minItems": 1
        },
        "total-units": {
          "type": "number"
        }
      },
      "required": [
        "units-unknown"
      ],
      "if": {
        "properties": {
          "units-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "units-per-bedroom-no"
        ]
      }
    },
    "bedroom-count": {
      "type": "object",
      "properties": {
        "no-bedrooms-unknown": {
          "type": "boolean"
        },
        "no-of-bedrooms": {
          "type": "number"
        },
        "units": {
          "type": "number"
        }
      },
      "required": [
        "no-bedrooms-unknown",
        "units"
      ],
      "if": {
        "properties": {
          "no-bedrooms-unknown": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "no-of-bedrooms"
        ]
      }
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "time-range": {
      "type": "object",
      "properties": {
        "open-time": {
          "type": "string"
        },
        "close-time": {
          "type": "string"
        }
      },
      "required": [
        "open-time",
        "close-time"
      ]
    },
    "bng-details": {
      "type": "object",
      "properties": {
        "pre-development-date": {
          "type": "string"
        },
        "pre-development-biodiversity-value": {
          "type": "number"
        },
        "earlier-date-reason": {
          "type": "string"
        },
        "habitat-loss-after-2020": {
          "type": "boolean"
        },
        "habitat-loss-details": {
          "$ref": "#/definitions/habitat-loss-details"
        },
        "metric-publication-date": {
          "type": "string"
        },
        "irreplaceable-habitats": {
          "type": "boolean"
        },
        "irreplaceable-habitats-details": {
          "type": "string"
        },
        "supporting-documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-document"
          },
          "minItems": 1
        }
      },
      "required": [
        "pre-development-date",
        "pre-development-biodiversity-value",
        "metric-publication-date",
        "irreplaceable-habitats",
        "supporting-documents"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "habitat-loss-after-2020": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "habitat-loss-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "irreplaceable-habitats": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "irreplaceable-habitats-details"
            ]
          }
        }
      ]
    },
    "habitat-loss-details": {
      "type": "object",
      "properties": {
        "loss-date": {
          "type": "string"
        },
        "pre-loss-biodiversity-value": {
          "type": "number"
        },
        "supporting-evidence": {
          "type": "string"
        }
      },
      "required": [
        "loss-date",
        "pre-loss-biodiversity-value"
      ]
    },
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "supporting-document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "reference",
        "name"
      ]
    },
    "waste-streams": {
      "type": "object",
      "properties": {
        "municipal": {
          "type": "number"
        },
        "construction-demolition": {
          "type": "number"
        },
        "commercial-industrial": {
          "type": "number"
        },
        "hazardous": {
          "type": "number"
        }
      },
      "required": []
    },
    "existing-use": {
      "type": "object",
      "properties": {
        "existing-use-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/existing-use-detail"
          },
          "minItems": 1
        },
        "site-vacant": {
          "type": "boolean"
        },
        "last-use-details": {
          "type": "string"
        },
        "last-use-end-date": {
          "type": "string"
        },
        "is-contaminated-land": {
          "type": "boolean"
        },
        "is-suspected-contaminated-land": {
          "type": "boolean"
        },
        "proposed-use-contamination-risk": {
          "type": "boolean"
        },
        "contamination-assessment": {
          "type": "string"
        }
      },
      "required": [
        "existing-use-details",
        "site-vacant",
        "is-contaminated-land",
        "is-suspected-contaminated-land",
        "proposed-use-contamination-risk"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "site-vacant": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "last-use-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "site-vacant": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "last-use-end-date"
            ]
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "is-contaminated-land": {
                    "const": true
                  }
                }
              },
              {
                "properties": {
                  "is-suspected-contaminated-land": {
                    "const": true
                  }
                }
              },
              {
                "properties": {
                  "proposed-use-contamination-risk": {
                    "const": true
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "contamination-assessment"
            ]
          }
        }
      ]
    },
    "ownership-certs": {
      "type": "object",
      "properties": {
        "sole-owner": {
          "type": "boolean"
        },
        "agricultural-tenants": {
          "type": "boolean"
        },
        "owners-and-tenants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/notified-person"
          },
          "minItems": 1
        },
        "steps-taken": {
          "type": "string"
        },
        "newspaper-notices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/newspaper-notice"
          },
          "minItems": 1
        },
