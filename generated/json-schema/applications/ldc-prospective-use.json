{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "ldc-prospective-use.json",
  "title": "LDC Proposed Use",
  "description": "Prospective use of the site",
  "type": "object",
  "properties": {
    "proposal-details-ldc": {
      "$ref": "#/definitions/proposal-details-ldc"
    },
    "grounds-existing-use": {
      "$ref": "#/definitions/grounds-existing-use"
    },
    "grounds-proposed-use": {
      "$ref": "#/definitions/grounds-proposed-use"
    }
  },
  "required": [],
  "definitions": {
    "document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "document-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "acoustic-report",
              "affordable-housing-statement",
              "air-quality-assessment",
              "arboriculturist-report",
              "archaeological-assessment",
              "biodiversity-survey-report",
              "cil-form",
              "condition-of-trees",
              "completed-app-form",
              "daylight-sunlight-assessment",
              "design-and-access-statement",
              "elevation-existing",
              "elevation-proposed",
              "energy-statement",
              "eia",
              "environmental-statement",
              "flood-risk-assessment",
              "floor-plan-existing",
              "floor-plan-proposed",
              "heritage-impact-assessment",
              "heritage-statement",
              "hydrocarbon-licence",
              "land-contamination-assessment",
              "landscaping-plan",
              "lighting-assessment",
              "location-plan",
              "noise-and-traffic-assessment",
              "noise-assessment",
              "photos",
              "planning-statement",
              "roof-plan-existing",
              "roof-plan-proposed",
              "schedule-of-works",
              "section-existing",
              "section-proposed",
              "site-plan",
              "site-restoration",
              "sketch-plan",
              "sci",
              "structural-damage",
              "subsidence-report",
              "sustainable-drainage-strategy",
              "transport-assessment",
              "travel-plan",
              "ecology-assessment",
              "fire-statement",
              "habitat-baseline",
              "proposed-habitat-plan",
              "sustainability-statement",
              "bng-metric"
            ]
          },
          "minItems": 1
        },
        "file": {
          "$ref": "#/definitions/file"
        }
      },
      "required": [
        "reference",
        "name",
        "document-types",
        "file"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "base64-content": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "mime-type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "file-size": {
          "type": "number"
        }
      },
      "required": [
        "filename"
      ]
    },
    "grounds-proposed-use": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": []
        },
        "specified-use": {
          "type": "string"
        },
        "operation-type": {
          "type": "string",
          "enum": [
            "permanent",
            "temporary"
          ]
        },
        "temporary-details": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "operation-type",
        "reason"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "use": {
                    "const": "sui"
                  }
                }
              },
              {
                "properties": {
                  "use": {
                    "const": "other"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        }
      ]
    },
    "grounds-existing-use": {
      "type": "object",
      "properties": {
        "use-lawful-reason": {
          "type": "string"
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        },
        "use": {
          "type": "string",
          "enum": []
        },
        "specified-use": {
          "type": "string"
        }
      },
      "required": [
        "use-lawful-reason"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        }
      ]
    },
    "proposal-details-ldc": {
      "type": "object",
      "properties": {
        "proposal-incl-building-operations": {
          "type": "boolean"
        },
        "proposal-building-operations-description": {
          "type": "string"
        },
        "proposal-incl-change-of-use": {
          "type": "boolean"
        },
        "proposal-change-of-use-description": {
          "type": "string"
        },
        "proposal-existing-use-description": {
          "type": "string"
        },
        "proposal-existing-use-stop-date": {
          "type": "string"
        },
        "proposal-started": {
          "type": "boolean"
        }
      },
      "required": [
        "proposal-incl-building-operations",
        "proposal-incl-change-of-use",
        "proposal-started"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "proposal-incl-building-operations": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-building-operations-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-change-of-use-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-existing-use-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-existing-use-stop-date"
            ]
          }
        }
      ]
    }
  }
}