{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "ldc-prospective-use.json",
  "title": "LDC Proposed Use",
  "description": "Prospective use of the site",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "grounds-existing-use": {
      "$ref": "#/definitions/grounds-existing-use"
    },
    "grounds-proposed-use": {
      "$ref": "#/definitions/grounds-proposed-use"
    },
    "interest-details": {
      "$ref": "#/definitions/interest-details"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "proposal-details-ldc": {
      "$ref": "#/definitions/proposal-details-ldc"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "checklist",
    "conflict-of-interest",
    "declaration",
    "grounds-existing-use",
    "grounds-proposed-use",
    "interest-details",
    "pre-app-advice",
    "proposal-details-ldc",
    "site-details",
    "site-visit"
  ],
  "definitions": {
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "ldc-interested-person": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "nature-of-interest": {
          "type": "string"
        },
        "informed-of-application": {
          "type": "boolean"
        },
        "reason-not-informed": {
          "type": "string"
        }
      },
      "required": [
        "person",
        "nature-of-interest",
        "informed-of-application"
      ]
    },
    "document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "document-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "acoustic-report",
              "affordable-housing-statement",
              "air-quality-assessment",
              "arboriculturist-report",
              "archaeological-assessment",
              "biodiversity-survey-report",
              "cil-form",
              "condition-of-trees",
              "completed-app-form",
              "daylight-sunlight-assessment",
              "design-and-access-statement",
              "elevation-existing",
              "elevation-proposed",
              "energy-statement",
              "eia",
              "environmental-statement",
              "flood-risk-assessment",
              "floor-plan-existing",
              "floor-plan-proposed",
              "heritage-impact-assessment",
              "heritage-statement",
              "hydrocarbon-licence",
              "land-contamination-assessment",
              "landscaping-plan",
              "lighting-assessment",
              "location-plan",
              "noise-and-traffic-assessment",
              "noise-assessment",
              "photos",
              "planning-statement",
              "roof-plan-existing",
              "roof-plan-proposed",
              "schedule-of-works",
              "section-existing",
              "section-proposed",
              "site-plan",
              "site-restoration",
              "sketch-plan",
              "sci",
              "structural-damage",
              "subsidence-report",
              "sustainable-drainage-strategy",
              "transport-assessment",
              "travel-plan",
              "ecology-assessment",
              "fire-statement",
              "habitat-baseline",
              "proposed-habitat-plan",
              "sustainability-statement",
              "bng-metric"
            ]
          },
          "minItems": 1
        },
        "file": {
          "$ref": "#/definitions/file"
        }
      },
      "required": [
        "reference",
        "name",
        "document-types",
        "file"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "base64-content": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "mime-type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "file-size": {
          "type": "number"
        }
      },
      "required": [
        "filename"
      ]
    },
    "ldc-owner-details": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "informed-of-application": {
          "type": "boolean"
        }
      },
      "required": [
        "person",
        "informed-of-application"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "site-visit": {
      "type": "object",
      "properties": {
        "can-be-seen-from": {
          "type": "boolean"
        },
        "contact-type": {
          "type": "string",
          "enum": [
            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "if": {
        "properties": {
          "contact-type": {
            "const": "other"
          }
        }
      },
      "then": {
        "required": [
          "other-contact"
        ]
      }
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "interest-details": {
      "type": "object",
      "properties": {
        "applicant-interest": {
          "type": "string",
          "enum": []
        },
        "owner-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-owner-details"
          },
          "minItems": 1
        },
        "interested-persons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-interested-person"
          },
          "minItems": 1
        },
        "applicant-owns-land": {
          "type": "boolean"
        },
        "permission-obtained": {
          "type": "boolean"
        },
        "permission-not-obtained-details": {
          "type": "string"
        }
      },
      "required": [
        "applicant-interest",
        "applicant-owns-land"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "applicant-interest": {
                    "const": "lessee"
                  }
                }
              },
              {
                "properties": {
                  "applicant-interest": {
                    "const": "occupier"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "owner-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "applicant-interest": {
                "const": "none"
              }
            }
          },
          "then": {
            "required": [
              "interested-persons"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "applicant-owns-land": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "permission-obtained"
            ]
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "applicant-owns-land": {
                    "const": false
                  }
                }
              },
              {
                "properties": {
                  "permission-obtained": {
                    "const": false
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "permission-not-obtained-details"
            ]
          }
        }
      ]
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "grounds-proposed-use": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "enum": []
        },
        "specified-use": {
          "type": "string"
        },
        "operation-type": {
          "type": "string",
          "enum": [
            "permanent",
            "temporary"
          ]
        },
        "temporary-details": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "operation-type",
        "reason"
      ],
      "if": {
        "anyOf": [
          {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          }
        ]
      },
      "then": {
        "required": [
          "specified-use"
        ]
      }
    },
    "proposal-details-ldc": {
      "type": "object",
      "properties": {
        "proposal-incl-building-operations": {
          "type": "boolean"
        },
        "proposal-building-operations-description": {
          "type": "string"
        },
        "proposal-incl-change-of-use": {
          "type": "boolean"
        },
        "proposal-change-of-use-description": {
          "type": "string"
        },
        "proposal-existing-use-description": {
          "type": "string"
        },
        "proposal-existing-use-stop-date": {
          "type": "string"
        },
        "proposal-started": {
          "type": "boolean"
        }
      },
      "required": [
        "proposal-incl-building-operations",
        "proposal-incl-change-of-use",
        "proposal-started"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "proposal-incl-building-operations": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-building-operations-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-change-of-use-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-existing-use-description"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "proposal-incl-change-of-use": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "proposal-existing-use-stop-date"
            ]
          }
        }
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "grounds-existing-use": {
      "type": "object",
      "properties": {
        "use-lawful-reason": {
          "type": "string"
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        },
        "use": {
          "type": "string",
          "enum": []
        },
        "specified-use": {
          "type": "string"
        }
      },
      "required": [
        "use-lawful-reason"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "use": {
                "const": "sui"
              }
            }
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "use": {
                "const": "other"
              }
            }
          },
          "then": {
            "required": [
              "specified-use"
            ]
          }
        }
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    }
  }
}