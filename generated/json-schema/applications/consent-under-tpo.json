{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "consent-under-tpo.json",
  "title": "Consent under TPO",
  "description": "An application that will affect a protected tree including those covered by a Tree Preservation Order (TPO) or those which grow in a conservation area",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "tpo": {
      "$ref": "#/definitions/tpo"
    },
    "tree-work-details": {
      "$ref": "#/definitions/tree-work-details"
    },
    "trees-additional": {
      "$ref": "#/definitions/trees-additional"
    },
    "trees-ownership": {
      "$ref": "#/definitions/trees-ownership"
    },
    "application": {
      "$ref": "#/definitions/application"
    }
  },
  "required": [
    "application"
  ],
  "definitions": {
    "tree-details": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "species": {
          "type": "string"
        },
        "description-of-works": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "replanting-description": {
          "type": "string"
        }
      },
      "required": [
        "reference"
      ]
    },
    "supporting-document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "reference",
        "name"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "owner": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "person"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "trees-ownership": {
      "type": "object",
      "properties": {
        "is-applicant-owner": {
          "type": "boolean"
        },
        "owner": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/owner"
          },
          "minItems": 1
        }
      },
      "required": [
        "is-applicant-owner"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "is-applicant-owner": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "owner"
            ]
          }
        }
      ]
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "trees-additional": {
      "type": "object",
      "properties": {
        "advice-from-authority": {
          "type": "string"
        },
        "condition-concerns": {
          "type": "boolean"
        },
        "causing-subsidence": {
          "type": "boolean"
        },
        "causing-structural-damage": {
          "type": "boolean"
        },
        "supporting-documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/supporting-document"
          },
          "minItems": 1
        }
      },
      "required": [
        "condition-concerns",
        "causing-subsidence",
        "causing-structural-damage",
        "supporting-documents"
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {
        "conflict-to-declare": {
          "type": "boolean"
        },
        "conflict-person-name": {
          "type": "string"
        },
        "conflict-details": {
          "type": "string"
        }
      },
      "required": [
        "conflict-to-declare"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-person-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-details"
            ]
          }
        }
      ]
    },
    "tree-work-details": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "tree-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tree-details"
          },
          "minItems": 1
        }
      },
      "required": [
        "description"
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "tpo": {
      "type": "object",
      "properties": {
        "tpo-reference": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "tpo-provided-by": {
          "type": "string",
          "enum": [
            "applicant",
            "system"
          ]
        }
      },
      "required": []
    },
    "application": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "application-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "hh",
              "full",
              "outline",
              "reserved-matters",
              "demolition-con-area",
              "lbc",
              "advertising",
              "ldc",
              "prior-approval",
              "s73",
              "approval-condition",
              "consent-under-tpo",
              "non-material-amendment",
              "pip",
              "extraction-oil-gas",
              "hedgerow-removal",
              "notice-trees-in-con-area",
              "waste-dev",
              "land-drainage-consent",
              "footpath-diversion",
              "cert-alt-appropriate-dev",
              "overhead-lines",
              "nsips",
              "mod-construction-hours",
              "extend-duration-permission",
              "mineral-extraction",
              "mod-discharge-s106",
              "twao",
              "change-of-use",
              "reg-3",
              "reg-4",
              "mineral-app",
              "technical-details-consent",
              "romp",
              "haz-substance-consent",
              "psi-app"
            ]
          },
          "minItems": 1
        },
        "application-sub-type": {
          "type": "string",
          "enum": [
            "ldc-existing-use",
            "ldc-prospective-use",
            "ldc-proposed-work-lb",
            "outline-some",
            "outline-all",
            "pa-extension",
            "pa-storey"
          ]
        },
        "planning-authority": {
          "type": "string"
        },
        "submission-date": {
          "type": "string"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        },
        "fee": {
          "$ref": "#/definitions/fee"
        }
      },
      "required": [
        "reference",
        "application-types",
        "planning-authority",
        "submission-date",
        "modules",
        "documents"
      ]
    },
    "fee": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "amount-paid": {
          "type": "number"
        },
        "transactions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "amount",
        "amount-paid"
      ]
    },
    "document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "document-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "acoustic-report",
              "affordable-housing-statement",
              "air-quality-assessment",
              "arboriculturist-report",
              "archaeological-assessment",
              "biodiversity-survey-report",
              "cil-form",
              "condition-of-trees",
              "completed-app-form",
              "daylight-sunlight-assessment",
              "design-and-access-statement",
              "elevation-existing",
              "elevation-proposed",
              "energy-statement",
              "eia",
              "environmental-statement",
              "flood-risk-assessment",
              "floor-plan-existing",
              "floor-plan-proposed",
              "heritage-impact-assessment",
              "heritage-statement",
              "hydrocarbon-licence",
              "land-contamination-assessment",
              "landscaping-plan",
              "lighting-assessment",
              "location-plan",
              "noise-and-traffic-assessment",
              "noise-assessment",
              "photos",
              "planning-statement",
              "roof-plan-existing",
              "roof-plan-proposed",
              "schedule-of-works",
              "section-existing",
              "section-proposed",
              "site-plan",
              "site-restoration",
              "sketch-plan",
              "sci",
              "structural-damage",
              "subsidence-report",
              "sustainable-drainage-strategy",
              "transport-assessment",
              "travel-plan",
              "ecology-assessment",
              "fire-statement",
              "habitat-baseline",
              "proposed-habitat-plan",
              "sustainability-statement",
              "bng-metric"
            ]
          },
          "minItems": 1
        },
        "file": {
          "$ref": "#/definitions/file"
        }
      },
      "required": [
        "reference",
        "name",
        "document-types",
        "file"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "base64-content": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "mime-type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "file-size": {
          "type": "number"
        }
      },
      "required": [
        "filename"
      ]
    }
  }
}