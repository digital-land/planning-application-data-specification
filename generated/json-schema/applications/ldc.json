{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "ldc.json",
  "title": "Lawful development certificate",
  "description": "A legal document stating the lawfulness of past, present or future building use, operation or other matters, signifying that enforcement action cannot be carried out against the development",
  "type": "object",
  "properties": {
    "agent-contact": {
      "$ref": "#/definitions/agent-contact"
    },
    "agent-details": {
      "$ref": "#/definitions/agent-details"
    },
    "applicant-contact": {
      "$ref": "#/definitions/applicant-contact"
    },
    "applicant-details": {
      "$ref": "#/definitions/applicant-details"
    },
    "conflict-of-interest": {
      "$ref": "#/definitions/conflict-of-interest"
    },
    "checklist": {
      "$ref": "#/definitions/checklist"
    },
    "declaration": {
      "$ref": "#/definitions/declaration"
    },
    "interest-details": {
      "$ref": "#/definitions/interest-details"
    },
    "pre-app-advice": {
      "$ref": "#/definitions/pre-app-advice"
    },
    "site-details": {
      "$ref": "#/definitions/site-details"
    },
    "site-visit": {
      "$ref": "#/definitions/site-visit"
    },
    "application": {
      "$ref": "#/definitions/application"
    }
  },
  "required": [
    "agent-contact",
    "agent-details",
    "applicant-contact",
    "applicant-details",
    "conflict-of-interest",
    "checklist",
    "declaration",
    "interest-details",
    "pre-app-advice",
    "site-details",
    "site-visit",
    "application"
  ],
  "definitions": {
    "ldc-interested-person": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "nature-of-interest": {
          "type": "string"
        },
        "informed-of-application": {
          "type": "boolean"
        },
        "reason-not-informed": {
          "type": "string"
        }
      },
      "required": [
        "person",
        "nature-of-interest",
        "informed-of-application"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "first-name": {
          "type": "string"
        },
        "last-name": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      },
      "required": [
        "first-name",
        "last-name",
        "address-text"
      ]
    },
    "applicant": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "ldc-owner-details": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "#/definitions/person"
        },
        "informed-of-application": {
          "type": "boolean"
        }
      },
      "required": [
        "person",
        "informed-of-application"
      ]
    },
    "contact-details": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone-numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone-number"
          },
          "minItems": 1
        }
      },
      "required": [
        "email",
        "phone-numbers"
      ]
    },
    "other-contact": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": [
        "fullname",
        "number",
        "email"
      ]
    },
    "site-location": {
      "type": "object",
      "properties": {
        "site-boundary": {
          "type": "string"
        },
        "address-text": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        },
        "easting": {
          "type": "number"
        },
        "northing": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "uprns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": []
    },
    "agent": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "company": {
          "type": "string"
        },
        "user-role": {
          "type": "string",
          "enum": [
            "agent",
            "proxy"
          ]
        }
      },
      "required": [
        "reference",
        "person"
      ]
    },
    "phone-number": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string"
        },
        "contact-priority": {
          "type": "string",
          "enum": [
            "primary",
            "secondary"
          ]
        }
      },
      "required": []
    },
    "site-visit": {
      "type": "object",
      "properties": {
        "can-be-seen-from": {
          "type": "boolean"
        },
        "contact-type": {
          "type": "string",
          "enum": [
            "applicant",
            "agent"
          ]
        },
        "contact-reference": {
          "type": "string"
        },
        "other-contact": {
          "$ref": "#/definitions/other-contact"
        }
      },
      "required": [
        "can-be-seen-from",
        "contact-type"
      ],
      "if": {
        "properties": {
          "contact-type": {
            "const": "other"
          }
        }
      },
      "then": {
        "required": [
          "other-contact"
        ]
      }
    },
    "applicant-contact": {
      "type": "object",
      "properties": {
        "applicant-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "applicant-reference",
        "contact-details"
      ]
    },
    "site-details": {
      "type": "object",
      "properties": {
        "site-locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/site-location"
          },
          "minItems": 1
        }
      },
      "required": [
        "site-locations"
      ]
    },
    "applicant-details": {
      "type": "object",
      "properties": {
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/applicant"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicants"
      ]
    },
    "conflict-of-interest": {
      "type": "object",
      "properties": {
        "conflict-to-declare": {
          "type": "boolean"
        },
        "conflict-person-name": {
          "type": "string"
        },
        "conflict-details": {
          "type": "string"
        }
      },
      "required": [
        "conflict-to-declare"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-person-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "conflict-to-declare": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "conflict-details"
            ]
          }
        }
      ]
    },
    "agent-details": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "#/definitions/agent"
        }
      },
      "required": []
    },
    "pre-app-advice": {
      "type": "object",
      "properties": {
        "advice-sought": {
          "type": "boolean"
        },
        "officer-name": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "advice-date": {
          "type": "string"
        },
        "advice-summary": {
          "type": "string"
        }
      },
      "required": [
        "advice-sought"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "officer-name"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "reference"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-date"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "advice-sought": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "advice-summary"
            ]
          }
        }
      ]
    },
    "checklist": {
      "type": "object",
      "properties": {
        "national-req-types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "national-req-types"
      ]
    },
    "agent-contact": {
      "type": "object",
      "properties": {
        "agent-reference": {
          "type": "string"
        },
        "contact-details": {
          "$ref": "#/definitions/contact-details"
        }
      },
      "required": [
        "agent-reference",
        "contact-details"
      ]
    },
    "interest-details": {
      "type": "object",
      "properties": {
        "applicant-interest": {
          "type": "string",
          "enum": []
        },
        "owner-details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-owner-details"
          },
          "minItems": 1
        },
        "interested-persons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ldc-interested-person"
          },
          "minItems": 1
        }
      },
      "required": [
        "applicant-interest"
      ],
      "allOf": [
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "applicant-interest": {
                    "const": "lessee"
                  }
                }
              },
              {
                "properties": {
                  "applicant-interest": {
                    "const": "occupier"
                  }
                }
              }
            ]
          },
          "then": {
            "required": [
              "owner-details"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "applicant-interest": {
                "const": "none"
              }
            }
          },
          "then": {
            "required": [
              "interested-persons"
            ]
          }
        }
      ]
    },
    "declaration": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "declaration-confirmed": {
          "type": "boolean"
        },
        "declaration-date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "declaration-confirmed",
        "declaration-date"
      ]
    },
    "application": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "application-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "hh",
              "full",
              "outline",
              "reserved-matters",
              "demolition-con-area",
              "lbc",
              "advertising",
              "ldc",
              "prior-approval",
              "s73",
              "approval-condition",
              "consent-under-tpo",
              "non-material-amendment",
              "pip",
              "extraction-oil-gas",
              "hedgerow-removal",
              "notice-trees-in-con-area",
              "waste-dev",
              "land-drainage-consent",
              "footpath-diversion",
              "cert-alt-appropriate-dev",
              "overhead-lines",
              "nsips",
              "mod-construction-hours",
              "extend-duration-permission",
              "mineral-extraction",
              "mod-discharge-s106",
              "twao",
              "change-of-use",
              "reg-3",
              "reg-4",
              "mineral-app",
              "technical-details-consent",
              "romp",
              "haz-substance-consent",
              "psi-app"
            ]
          },
          "minItems": 1
        },
        "application-sub-type": {
          "type": "string",
          "enum": []
        },
        "planning-authority": {
          "type": "string"
        },
        "submission-date": {
          "type": "string"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/document"
          },
          "minItems": 1
        },
        "fee": {
          "$ref": "#/definitions/fee"
        }
      },
      "required": [
        "reference",
        "application-types",
        "planning-authority",
        "submission-date",
        "modules",
        "documents"
      ]
    },
    "document": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "document-types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "acoustic-report",
              "affordable-housing-statement",
              "air-quality-assessment",
              "arboriculturist-report",
              "archaeological-assessment",
              "biodiversity-survey-report",
              "cil-form",
              "condition-of-trees",
              "completed-app-form",
              "daylight-sunlight-assessment",
              "design-and-access-statement",
              "elevation-existing",
              "elevation-proposed",
              "energy-statement",
              "eia",
              "environmental-statement",
              "flood-risk-assessment",
              "floor-plan-existing",
              "floor-plan-proposed",
              "heritage-impact-assessment",
              "heritage-statement",
              "hydrocarbon-licence",
              "land-contamination-assessment",
              "landscaping-plan",
              "lighting-assessment",
              "location-plan",
              "noise-and-traffic-assessment",
              "noise-assessment",
              "photos",
              "planning-statement",
              "roof-plan-existing",
              "roof-plan-proposed",
              "schedule-of-works",
              "section-existing",
              "section-proposed",
              "site-plan",
              "site-restoration",
              "sketch-plan",
              "sci",
              "structural-damage",
              "subsidence-report",
              "sustainable-drainage-strategy",
              "transport-assessment",
              "travel-plan",
              "ecology-assessment",
              "fire-statement",
              "habitat-baseline",
              "proposed-habitat-plan",
              "sustainability-statement",
              "bng-metric"
            ]
          },
          "minItems": 1
        },
        "file": {
          "$ref": "#/definitions/file"
        }
      },
      "required": [
        "reference",
        "name",
        "document-types",
        "file"
      ]
    },
    "fee": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "amount-paid": {
          "type": "number"
        },
        "transactions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "amount",
        "amount-paid"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "base64-content": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "mime-type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "file-size": {
          "type": "number"
        }
      },
      "required": [
        "filename"
      ]
    }
  }
}